	number = {1812},
	urldate = {2017-05-24},
	journal = {Proc. R. Soc. B},
	author = {van der Bijl, Wouter and Thyselius, Malin and Kotrschal, Alexander and Kolm, Niclas},
	month = aug,
	year = {2015},
	pages = {20151132}
}

@article{van_schaik_social_2011,
	title = {Social learning and evolution: {The} cultural intelligence hypothesis},
	volume = {366},
	copyright = {This journal is © 2011 The Royal Society},
	issn = {0962-8436, 1471-2970},
	shorttitle = {Social learning and evolution},
