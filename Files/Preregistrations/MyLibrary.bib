@article{li_electrolytic_2008,
	title = {Electrolytic lesions of dorsal {CA}3 impair episodic-like memory in rats},
	volume = {89},
	issn = {1074-7427},
	url = {http://www.sciencedirect.com/science/article/B6WNM-4PF6W28-3/2/914f201262914a70d417f97d25b29f88},
	doi = {10.1016/j.nlm.2007.06.006},
	abstract = {Episodic memory is the ability to recollect one's past experiences occurring in an unique spatial and temporal context. In non-human animals, it is expressed in the ability to combine "what", "where" and "when" factors to form an integrated memory system. During the search for its neural substrates, the hippocampus has attracted a lot of attentions. Yet, it is not yet possible to induce a pure episodic-like memory deficit in animal studies without being confounded by impairments in the spatial cognition. Here, we present a lesion study evidencing direct links between the hippocampus CA3 region and the episodic-like memory in rats. In a spontaneous object exploration task, lesioned rats showed no interaction between the temporal and spatial elements in their memory associated with the objects. In separate tests carried out subsequently, the same animals still expressed abilities to process spatial, temporal, and object recognition memory. In conclusions, our results support the idea that the hippocampus CA3 has a particular status in the neural mechanism of the episodic-like memory system. It is responsible for combining information from different modules of cognitive processes.},
	number = {2},
	urldate = {2008-12-25},
	journal = {Neurobiology of Learning and Memory},
	author = {Li, Jay-Shake and Chao, Yuen-Shin},
	month = feb,
	year = {2008},
	keywords = {CA3, episodic memory, Rats, Spontaneous exploration},
	pages = {192--198}
}

@article{healy_food_1992,
