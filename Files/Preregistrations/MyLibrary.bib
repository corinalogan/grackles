@article{cools_canine_2008-4,
	title = {Canine {Reconciliation} and {Third}-{Party}-{Initiated} {Postconflict} {Affiliation}: {Do} {Peacemaking} {Social} {Mechanisms} in {Dogs} {Rival} {Those} of {Higher} {Primates}?},
