@article{palagi_peaceful_2008,
	title = {Peaceful {Post}-{Conflict} {Interactions} between {Aggressors} and {Bystanders} in captive lowland gorillas ({\textless}{I}{\textgreater}{Gorilla} gorilla gorilla{\textless}/{I}{\textgreater})},
