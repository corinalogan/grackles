	journal = {Animal Behaviour},
	author = {Scheid, Christelle and Schmidt, Judith and No�, Ronald},
	month = nov,
	year = {2008},
	keywords = {corvid, Corvus frugilegus, costly signalling, food sharing, reciprocity, rook},
	pages = {1701--1707}
}

@article{veenema_methodological_1994,
