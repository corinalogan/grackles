@article{sol_behavioural_2000,
	title = {Behavioural flexibility predicts invasion success in birds introduced to {New} {Zealand}},
	volume = {90},
	issn = {1600-0706},
	url = {http://onlinelibrary.wiley.com/doi/10.1034/j.1600-0706.2000.900317.x/abstract},
